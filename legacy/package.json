{
  "name": "paul.laffitte",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "yarn build && (sleep 3 && yarn open &) && (yarn webpack --watch --config webpack.config.js & yarn serve && fg)",
    "build": "yarn webpack --config webpack.config.js",
    "serve": "bundle exec jekyll serve -d /tmp/jekyll",
    "open": "yarn opn http://localhost:4000",
    "clean": "bash -c \"rm dist api _data2 assets/js node_modules/.bin/{file-loader,terser-webpack-plugin} node_modules/webpack/node_modules/.bin/terser-webpack-plugin -rfv\"",
    "re": "yarn clean && yarn build",
    "publish": "./publish.sh"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "7",
    "babel-preset-es2015": "^6.24.1",
    "extract-loader": "^3.0.0",
    "file-loader": "^2.0.0",
    "node-jq": "^1.3.1",
    "opn-cli": "^4.0.0",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "yaml": "^1.0.2",
    "yaml-loader": "^0.5.0"
  }
}
